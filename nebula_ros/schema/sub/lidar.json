{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LiDAR common parameters.",
  "type": "object",
  "definitions": {
    "lidar": {
      "type": "object",
      "properties": {
        "diag_span": {
          "type": "integer",
          "default": 1000,
          "minimum": 0,
          "readOnly": true,
          "description": "Diagnostics rate."
        },
        "scan_phase": {
          "type": "number",
          "default": 0.0,
          "minimum": 0.0,
          "maximum": 360.0,
          "description": "Sensor scan phase."
        }
      },
      "allOf": [
        {
          "$ref": "nebula.json#/definitions/nebula"
        }
      ],
      "required": [
        "diag_span",
        "scan_phase"
      ]
    }
  }
}